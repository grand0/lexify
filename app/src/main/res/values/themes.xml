<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Lexify" parent="Theme.Material3.DayNight.NoActionBar">
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->

        <item name="android:windowBackground">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/high_emphasis</item>
        <item name="android:textColorHint">@color/medium_emphasis</item>
        <item name="android:textColorSecondary">@color/medium_emphasis</item>
        <item name="iconTint">@color/high_emphasis</item>
        <item name="tabTextAppearance">@style/Text</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
    </style>
    
    <style name="Text" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/high_emphasis</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_dropdown_icon</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:textColor">@color/high_emphasis</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Button.Active" parent="Button">
        <item name="android:background">@drawable/btn_active</item>
        <item name="android:textColor">@color/surface</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:progressTint">@color/high_emphasis</item>
        <item name="android:progressTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/high_emphasis</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>
</resources>