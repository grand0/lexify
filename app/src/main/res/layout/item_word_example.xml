<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:paddingHorizontal="20dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="In a subsequent passage, &quot;I am as melancholy as a gibb'd cat&quot; -- we are told that _cat_ is not the domestic animal of that name, but a contraction of _catin_, a woman of the town." />

    <TextView
        android:id="@+id/tv_attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        tools:text="Famous Reviews, R. Brimley Johnson, 1899" />


</androidx.constraintlayout.widget.ConstraintLayout>